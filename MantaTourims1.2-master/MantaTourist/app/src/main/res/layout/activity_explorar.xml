<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondo1"
    tools:context="com.facci.mantatourist.Explorar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:text="BIENVENIDOS"
        android:textColor="#006666"
        android:textStyle="bold|italic"/>

        <Button
        android:text="Bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_alignEnd="@+id/imageView1"
        android:onClick="bar"
        android:layout_marginTop="32dp"
        android:id="@+id/btn1"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        android:backgroundTint="@color/teal"
        android:textColor="#00FFFF"/>

    <Button
        android:text="Playas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn2"
        android:onClick="playa"
        android:layout_alignBaseline="@+id/btn1"
        android:layout_alignBottom="@+id/btn1"
        android:layout_alignEnd="@+id/imageView2"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        android:backgroundTint="@color/teal"
        android:textColor="#00FFFF"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/discoteca2"
        android:id="@+id/imageView3"
        android:layout_below="@+id/btn1"
        android:layout_alignEnd="@+id/btn1"
        android:layout_marginTop="21dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/hoteles"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignStart="@+id/btn2" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/playa"
        android:id="@+id/imageView2"
        android:layout_marginEnd="37dp"
        android:layout_alignTop="@+id/imageView1"
        android:layout_alignParentEnd="true" />

        <Button
        android:text="Hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn4"
        android:textSize="15dp"
        android:onClick="hotel"
        android:textStyle="bold|italic"
        android:backgroundTint="@color/teal"
        android:textColor="#00FFFF"
        android:layout_below="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />

    <Button
        android:text="Comentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn5"
        android:onClick="comentar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="15dp"
        android:textColor="#006666"
        android:textStyle="bold|italic"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView3" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/bar1"
            android:id="@+id/imageView1"
            android:layout_marginStart="45dp"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/tv1"
            android:layout_alignParentStart="true" />

        <Button
            android:text="SALIR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15dp"
            android:textColor="#006666"
            android:textStyle="bold|italic"
            android:layout_alignStart="@+id/btn4"
            android:layout_below="@+id/btn4" />

        <Button
            android:text="Discoteca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn3"
            android:onClick="discoteca"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            android:backgroundTint="@color/teal"
            android:textColor="#00FFFF"
            android:layout_below="@+id/imageView3"
            android:layout_alignStart="@+id/btn5" />

    </RelativeLayout>

    </ScrollView>

</RelativeLayout>
